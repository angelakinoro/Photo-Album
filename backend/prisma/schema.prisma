generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int     @id @default(autoincrement())
  name       String  
  username   String
  email      String  @unique
  albums     Album[]
}

model Album {
  id         Int     @id @default(autoincrement())
  title      String
  user       User    @relation(fields: [userId], references: [id])
  userId     Int
  photos     Photo[]
}

model Photo {
  id        Int      @id @default(autoincrement())
  title     String
  imageUrl  String
  album     Album    @relation(fields: [albumId], references: [id])
  albumId   Int
}
